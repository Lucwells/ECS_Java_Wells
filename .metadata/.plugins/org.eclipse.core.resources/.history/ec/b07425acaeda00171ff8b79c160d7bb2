import java.util.Scanner;
public class ALittleQuiz
{
	public static void main(String [] args)
	{
		Scanner keyboard = new Scanner(System.in);
		int capital, yesno, math;
		String apple;
		apple="''Apple''";
		System.out.println("Q1) What is the capital of California?");
		System.out.println("    1) San Francisco");
		System.out.println("    2) Sacramento");
		System.out.println("    3) San Diego");
		System.out.println(">");
		capital=keyboard.nextInt();
		if(capital==2)
		{
			System.out.println("Corrrect!");
		}
		else
		{
			System.out.println("That's wrong!");
		}
		System.out.println("");
		System.out.println("Q2) Can you store the value of " +apple+ " in a variable type int?");
		System.out.println("    1) Yes");
		System.out.println("    2) No");
		System.out.println(">");
		yesno=keyboard.nextInt();
		if(yesno==2)
		{
			System.out.println("Correct!");
		}
		else
		{
			System.out.println("That's wrong!");
		}
		System.out.println("");
		System.out.println("Q3) What is the result of 9*6/2?");
		System.out.println("    1) 27");
		System.out.println("    2) 18");
		System.out.println("    3) 108");
		System.out.println(">");
		math=keyboard.nextInt();
		if(math==2)
		{
			System.out.println("Correct!");
		}
		else
		{
			System.out.println("That's wrong!");
		}
		System.out.println("");
		if( capital==2 && yesno==2 && math ==2)
		{
			System.out.println("Good job, you got all 3 correct!");
		}
		else
		{
			System.out.println("You could use some work...");
		}
	}
}
